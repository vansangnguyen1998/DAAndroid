<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/anhDaiDien"
        android:layout_width="300px"
        android:layout_height="300px"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        />
    <TableLayout
        android:id="@+id/Table"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/anhDaiDien"
        android:orientation="horizontal"
        android:padding="40dp">
        <TableRow
            android:id="@+id/row1"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="3000dp">
            <TextView android:id="@+id/View1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/Hoten"
                android:textSize="25sp"
                android:textStyle="italic"/>
            <TextView

                android:id="@+id/ViewHoTen"
                android:layout_width="200dp"
                android:layout_height="match_parent"/>
        </TableRow>
        <TableRow
            android:id="@+id/row2"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="3000dp">
            <TextView android:id="@+id/View2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/NgaySinh"
                android:textSize="25sp"
                android:textStyle="italic"/>
            <TextView android:id="@+id/ViewNgaySinh"
                android:layout_width="200dp"
                android:layout_height="match_parent"/>
        </TableRow>
        <TableRow
            android:id="@+id/row3"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="3000dp">
            <TextView android:id="@+id/View3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/GioiTinh"
                android:textSize="25sp"
                android:textStyle="italic"/>
            <TextView android:id="@+id/ViewGioiTinh"
                android:layout_width="200dp"
                android:layout_height="match_parent"/>
        </TableRow>
    </TableLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:paddingTop="50dp"
        android:text="@string/trangcanhan"
        android:textSize="30sp"
        android:layout_marginBottom="30dp"
        android:textStyle="italic" />
</RelativeLayout>